{% extends 'base.mobile.html.twig' %}

{% block title %}时尚致爱邀您制作新春封面 - 想说的话{% endblock %}

{% block body %}
    <div class="face-body step2fill bg-white" ng-controller="SwapFaceCtrl">
        <div class="">
            <a href="http://www.ccbride.com/pub/download?direct=true"><img class="w-full" src="{{ asset('img/mobile/face/btn_download.gif') }}"/></a>
        </div>
        <div class="title text-center">
            <div class=""><img src="{{ asset('img/mobile/face/img_title_up.png') }}"/></div>
            <div class="bold-text">请编辑您想要说的话</div>
            <div class="img-under-title "><img src="{{ asset('img/mobile/face/img_title_down.png') }}"/></div>
        </div>

        <div class="content">
            {#<img class="w-full" src="{{ asset('img/mobile/face/img_model_2.png') }}"/>#}
            <canvas id="poster-canvas" class="w-full"></canvas>
            <input class="blank-left l-1" type="text" ng-model="waterMark.tag1"/>
            <input class="blank-left l-2" type="text" ng-model="waterMark.tag2"/>
            <input class="blank-left l-3" type="text" ng-model="waterMark.tag3"/>
            <input class="blank-right r-1" type="text" ng-model="waterMark.tag4"/>
            <input class="blank-right r-2" type="text" ng-model="waterMark.tag5"/>
            <input class="blank-right r-3" type="text" ng-model="waterMark.tag6"/>
        </div>
        <div class="text-center">
            <img class="bottom_btn" src="{{ asset('img/mobile/face/btn_enter2photo.png') }}" ng-click="gotoStepPhoto()"/>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var type = '{{ type }}';
    </script>
    <script type="text/javascript" src="{{ asset('js/mobile/face.js?v=4') }}"></script>
{% endblock %}