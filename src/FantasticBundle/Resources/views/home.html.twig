{% extends 'base.cbwa.html.twig' %}

{% block title %}全国婚礼作品设计大赛{% endblock %}

{% block body %}
    <div class="fe-home" ng-controller="HomeController">
        <div class="container">
            <div class="row">
                <div id="fe-carousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    {#<ol class="carousel-indicators">#}
                        {#<li data-target="#fe-carousel" data-slide-to="0" class="active"></li>#}
                        {#<li data-target="#fe-carousel" data-slide-to="1"></li>#}
                        {#<li data-target="#fe-carousel" data-slide-to="2"></li>#}
                    {#</ol>#}
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="http://cosmolove.image.alimmdn.com/cbwa/common/slide_1.jpg" alt="Slide 1">
                        </div>
                        <div class="item">
                            <img src="http://cosmolove.image.alimmdn.com/cbwa/common/slide_2.jpg" alt="Slide 2">
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#fe-carousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#fe-carousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="row fe-case-topic-area">
                <img class="fe-case-topic" src="{{ asset('img/fantastic/home/case_topic.png') }}" alt="Case" />
            </div>
            <div class="row fe-case-subtopic-area">
                最受关注的婚礼方案
            </div>
            <div class="row fe-case-row">
                <div class="col-md-4" ng-click="jumpToWorks(1)">
                    <div class="fe-case">
                        <img class="fe-width" src="{{ asset('img/fantastic/home/case_1.jpg') }}" alt="Case" />
                    </div>
                    <div class="fe-case-bottom">
                        <span class="fe-case-icon"><img src="{{ asset('img/fantastic/icon/case_award.png') }}" /></span>
                        <span class="fe-case-category">年度最佳婚礼创意设计</span>
                    </div>
                </div>
                <div class="col-md-4" ng-click="jumpToWorks(2)">
                    <div class="fe-case">
                        <img class="fe-width" src="{{ asset('img/fantastic/home/case_2.jpg') }}" alt="Case" />
                    </div>
                    <div class="fe-case-bottom">
                        <span class="fe-case-icon"><img src="{{ asset('img/fantastic/icon/case_award.png') }}" /></span>
                        <span class="fe-case-category">年度最佳婚礼色彩搭配</span>
                    </div>
                </div>
                <div class="col-md-4" ng-click="jumpToWorks(-1)">
                    <div class="fe-case">
                        <img class="fe-width" src="{{ asset('img/fantastic/home/case_3.jpg') }}" alt="Case" />
                    </div>
                    <div class="fe-case-bottom">
                        <span class="fe-case-icon"><img src="{{ asset('img/fantastic/icon/case_celebrity.png') }}" /></span>
                        <span class="fe-case-category">明星婚礼案例</span>
                    </div>
                </div>
            </div>
            <div class="row fe-case-row bottom">
                <div class="col-md-4" ng-click="jumpToWorks(4)">
                    <div class="fe-case">
                        <img class="fe-width" src="{{ asset('img/fantastic/home/case_4.jpg') }}" alt="Case" />
                    </div>
                    <div class="fe-case-bottom">
                        <span class="fe-case-icon"><img src="{{ asset('img/fantastic/icon/case_award.png') }}" /></span>
                        <span class="fe-case-category">年度最美婚礼花艺</span>
                    </div>
                </div>
                <div class="col-md-4" ng-click="jumpToWorks(3)">
                    <div class="fe-case">
                        <img class="fe-width" src="{{ asset('img/fantastic/home/case_5.jpg') }}" alt="Case" />
                    </div>
                    <div class="fe-case-bottom">
                        <span class="fe-case-icon"><img src="{{ asset('img/fantastic/icon/case_award.png') }}" /></span>
                        <span class="fe-case-category">年度最美婚礼场地</span>
                    </div>
                </div>
                <div class="col-md-4" ng-click="jumpToWorks(0)">
                    <div class="fe-case">
                        <img class="fe-width" src="{{ asset('img/fantastic/home/case_more.jpg') }}" alt="More" />
                    </div>
                    <div class="fe-case-more">
                        <img class="fe-width" src="{{ asset('img/fantastic/home/case_btn_more.png') }}" alt="More" />
                    </div>
                </div>
            </div>
            <div class="row" ng-click="check()">
                <img class="fe-width" src="{{ asset('img/fantastic/home/banner_middle.jpg') }}" alt="Banner" />
            </div>
            <div class="row fe-judge-area">
                <div class="col-md-12">
                    <div class="row fe-m0" ng-repeat="judgeRow in judgeList">
                        <div class="col-md-2" ng-repeat="judge in judgeRow">
                            <div class="fe-judge">
                                <img class="fe-judge-img fe-width" ng-src="{[{ judge.cover }]}@304w_354h_1e_1c" />
                                <div class="fe-judge-cover">
                                    <div class="fe-judge-name">
                                        {[{ judge.nickname }]}
                                    </div>
                                    <div class="fe-judge-intro">
                                        {[{ judge.intro }]}
                                    </div>
                                    <div class="fe-judge-intro">
                                        {[{ judge.subIntro }]}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        app.value('judgeList', '{{ judgeList | json_encode | escape('js') }}');
    </script>
    <script type="text/javascript" src="{{ asset('js/controller/home.js') }}"></script>
{% endblock %}