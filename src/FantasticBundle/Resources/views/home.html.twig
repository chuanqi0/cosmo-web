{% extends 'base.html.twig' %}

{% block title %}The Fantastic Event{% endblock %}

{% block body %}
    <div id="fe-carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#fe-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#fe-carousel" data-slide-to="1"></li>
            <li data-target="#fe-carousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="{{ asset('img/fantastic/home/slide_1.jpg') }}" alt="Slide 1">
            </div>
            <div class="item">
                <img src="{{ asset('img/fantastic/home/slide_1.jpg') }}" alt="Slide 2">
            </div>
            <div class="item">
                <img src="{{ asset('img/fantastic/home/slide_1.jpg') }}" alt="Slide 3">
            </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#fe-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#fe-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="fe-video">
        <div class="container">
            <div class="row fe-video-title-area">
                <img class="fe-video-title" src="{{ asset('img/fantastic/home/video_title.png') }}" alt="Video" />
            </div>
            <div class="row fe-video-subtitle-area">
                &nbsp;我的盛大婚礼是什么?
            </div>
            <div class="row fe-video-row">
                <div class="col-md-6">
                    <img class="fe-width" src="{{ asset('img/fantastic/home/video_more.jpg') }}" alt="Video" />
                </div>
                <div class="col-md-6">
                    <img class="fe-width" src="{{ asset('img/fantastic/home/video_more.jpg') }}" alt="Video" />
                </div>
            </div>
            <div class="row fe-video-row bottom">
                <div class="col-md-6">
                    <img class="fe-width" src="{{ asset('img/fantastic/home/video_more.jpg') }}" alt="Video" />
                </div>
                <div class="col-md-6">
                    <img class="fe-width" src="{{ asset('img/fantastic/home/video_more.jpg') }}" alt="Video" />
                </div>
            </div>
        </div>
    </div>
{% endblock %}