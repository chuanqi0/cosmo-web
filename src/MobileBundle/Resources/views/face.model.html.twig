{% extends 'base.mobile.html.twig' %}

{% block title %}时尚致爱邀您制作新春封面 - 选择模板{% endblock %}

{% block body %}
    <div class="face-body model bg-white" ng-controller="SwapFaceCtrl">
        <div class="">
            <a href="www.baidu.com"><img class="w-full" src="{{ asset('img/mobile/face/btn_download.gif') }}"/></a>
        </div>
        <div class="title text-center">
            <div class=""><img src="{{ asset('img/mobile/face/img_title_up.png') }}"/></div>
            <div class="bold-text">选择模板</div>
            <div class="img-under-title "><img src="{{ asset('img/mobile/face/img_title_down.png') }}"/></div>
        </div>

        <div class="content text-center">
            <div class="model-case padding-1">
                <div class="bold-text">女神版</div>
                <img class="w-full" src="{{ asset('img/mobile/face/img_model_1.png') }}"/>
                <img ng-if="!model.woman" ng-click="changeModel('woman')"  class="margin-t-sm" src="{{ asset('img/mobile/face/btn_model_empty.png') }}"/>
                <img ng-if="model.woman" class="margin-t-sm" src="{{ asset('img/mobile/face/btn_model_chose.png') }}"/>
            </div>
            <div class="model-case padding-2">
                <div class="bold-text">女神版</div>
                <img class="w-full" src="{{ asset('img/mobile/face/img_model_2.png') }}"/>
                <img ng-if="!model.man" ng-click="changeModel('woman')"  class="margin-t-sm" src="{{ asset('img/mobile/face/btn_model_empty.png') }}"/>
                <img ng-if="model.man" class="margin-t-sm" src="{{ asset('img/mobile/face/btn_model_chose.png') }}"/>
            </div>
            <div class="model-case padding-3">
                <div class="bold-text">情侣版</div>
                <img class="w-full" src="{{ asset('img/mobile/face/img_model_3.png') }}"/>
                <img ng-if="!model.couple" ng-click="changeModel('woman')"  class="margin-t-sm" src="{{ asset('img/mobile/face/btn_model_empty.png') }}"/>
                <img ng-if="model.couple" class="margin-t-sm" src="{{ asset('img/mobile/face/btn_model_chose.png') }}"/>
            </div>
        </div>
        <div class="text-center">
            <img class="bottom_btn" src="{{ asset('img/mobile/face/btn_enter2make.png') }}" ng-click="gotoStepFill()"/>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {#<script type="text/javascript">#}
    {#app.value('photoUuid', '{{ photoUuid }}');#}
    {#</script>#}
    <script type="text/javascript" src="{{ asset('js/mobile/face.js') }}"></script>
{% endblock %}
